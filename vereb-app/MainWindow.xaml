<Window x:Class="vereb_app.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vereb_app"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.Background>
			<ImageBrush ImageSource="Images/background.png"
                    Stretch="UniformToFill"/>
		</Grid.Background>


		<Canvas Margin="0,1,-4,-1">
			<Canvas.Background>
				<ImageBrush ImageSource="/background.jpg"/>
			</Canvas.Background>
			<Image x:Name="i" Source="/bird.png" Height="50" Width="50" Canvas.Left="4" Canvas.Top="149" >
			</Image>
			<Image x:Name="avoid" Source="/avoid.png" Height="268" Width="252" Canvas.Left="271" Canvas.Top="-8"  />
		</Canvas>
	</Grid>
</Window>
